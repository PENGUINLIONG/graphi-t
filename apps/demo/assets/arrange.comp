#version 450 core

layout(local_size_x_id=0, local_size_y_id=1, local_size_z_id=2) in;

layout(binding=0) writeonly buffer Buffer {
    float data[];
};

void main() {
    uvec3 size = gl_NumWorkGroups;
    uvec3 id = gl_WorkGroupID;
    uint idx = id.x + size.x * (id.y + size.y * id.z);
    data[idx] = float(idx);
}
